<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4ECC7D4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Facebook"
        android:textColor="#060AF3"
        android:textSize="36sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/cana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Create a New  Account"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        android:ems="5"
        android:inputType="textPersonName"
        android:text="first name" />

    <EditText
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"

        android:ems="5"
        android:inputType="textPersonName"
        android:text="last name" />

    <EditText
        android:id="@+id/mn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Mobile Number" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="text"
        android:text="New Password" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pw"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="Date Of Birth"
        android:textColor="#010111"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/a1"
        android:spinnerMode="dropdown" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:entries="@array/a2" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:entries="@array/a3" />


    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:textColor="#010111" />

    <RadioButton
        android:id="@+id/m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/g"
        android:layout_marginLeft="10dp"
        android:text="Male" />

    <RadioButton
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/g"
        android:layout_marginLeft="80dp"
        android:text="Female" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="Sign Up" />
</RelativeLayout>